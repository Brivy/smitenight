@inherits LayoutComponentBase

<Layout>
    <LayoutHeader>
        <Bar @bind-Visible="@_topBarVisible" Class="sn-bar" Breakpoint="Breakpoint.Tablet" Background="Background.Dark" ThemeContrast="ThemeContrast.Dark" Shadow="Shadow.Default">
            <Container>
                <BarBrand Class="sn-bar-brand">
                    <BarItem>
                        <BarLink To="">Smitenight.com (BETA)</BarLink>
                    </BarItem>
                </BarBrand>
                <BarToggler />
                <BarMenu>
                    <BarEnd>
                        <BarItem>
                            <BarLink To="about">About</BarLink>
                        </BarItem>
                    </BarEnd>
                </BarMenu>
            </Container>
        </Bar>
    </LayoutHeader>
    <LayoutContent>
        @Body
    </LayoutContent>
    <LayoutFooter>
        <LayoutFooter Padding="Padding.Is2.FromTop.Is2.FromTop.OnDesktop" Margin="Margin.Is3.OnY.OnDesktop" Border="Border.OnTop">
            <Container Class="sn-home-footer">
                Brivy - 2022
            </Container>
        </LayoutFooter>
    </LayoutFooter>
</Layout>
