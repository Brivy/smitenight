@page "/"

<div class="sn-home">
    <Row Gutter="(100, 0)">
        <Column ColumnSize="ColumnSize.Is6">
            <div class="sn-home-intro">
                <span>The first app that tracks your SMITE night!</span>
                <p>We wanted to track a single SMITE session, instead of digging through some boring old lifetime statistics. So we build <b>Smitenight.com</b> to do that for you! Keep track of what you did good (or bad) in your current session and try to improve where needed!</p>
            </div>
        </Column>
        <Column ColumnSize="ColumnSize.Is6">
            <Card Margin="Margin.Is4.OnY">
                <CardBody>
                    <div class="sn-home-start">
                        <Alert @ref="SmitenightSuccessAlert" Color="Color.Success">
                            <AlertMessage>
                                @SmitenightSuccessAlertMessage
                            </AlertMessage>
                        </Alert>
                        <Alert @ref="SmitenightErrorAlert" Color="Color.Danger">
                            <AlertMessage>
                                @SmitenightErrorAlertMessage
                            </AlertMessage>
                        </Alert>
                        <span>Start the night!</span>
                        <Divider/>
                        <EditForm Model="@_smitenightProcessModel" OnValidSubmit="@StartSmitenightAsync">
                            <div>
                                <Field>
                                    <FieldLabel>In-game playername</FieldLabel>
                                    <FieldBody>
                                        <TextEdit @bind-Text="_smitenightProcessModel.PlayerName"/>
                                    </FieldBody>
                                </Field>
                                <Field>
                                    <FieldLabel>Passcode</FieldLabel>
                                    <FieldBody>
                                        <TextEdit Placeholder="a1b2" Role="TextRole.Password" @bind-Text="_smitenightProcessModel.PassCode">
                                            <FieldHelp>Required for stopping your session.</FieldHelp>
                                        </TextEdit>
                                    </FieldBody>
                                </Field>
                            </div>
                            <Row Visibility="Visibility.Invisible">
                                <Column ColumnSize="ColumnSize.Is6">
                                    <Button Color="Color.Success" Type="ButtonType.Submit" PreventDefaultOnSubmit Block Clicked="@StartSmitenightAsync">Start!</Button>
                                </Column>
                                <Column ColumnSize="ColumnSize.Is6">
                                    <Button Color="Color.Danger" Type="ButtonType.Submit" PreventDefaultOnSubmit Block Clicked="@EndSmitenightAsync">Stop</Button>
                                </Column>
                            </Row>
                            <Row>
                                <Column ColumnSize="ColumnSize.Is12">
                                    <Progress Value="100" Animated Striped></Progress>
                                </Column>
                            </Row>
                        </EditForm>
                    </div>
                </CardBody>
            </Card>
        </Column>
    </Row>
</div>