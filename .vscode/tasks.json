    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build Maintenance",
            "command": "dotnet",
            "args": [
                "build",
                "--configuration", "Maintenance",
                "--output", "${workspaceFolder}/Source/Test.Maintenance/bin/Maintenance/net8.0",
            ],
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}